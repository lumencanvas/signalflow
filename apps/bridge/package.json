{
  "name": "clasp-bridge",
  "version": "0.1.2",
  "description": "CLASP Bridge - Universal Creative Protocol Bridge",
  "homepage": "https://clasp.to",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build && electron-builder",
    "start": "electron .",
    "lint": "eslint src electron"
  },
  "dependencies": {
    "@clasp-to/core": "file:../../bindings/js/packages/clasp-core"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.lumencanvas.clasp-bridge",
    "productName": "CLASP Bridge",
    "icon": "assets/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        { "target": "dmg", "arch": ["arm64", "x64"] },
        { "target": "zip", "arch": ["arm64", "x64"] }
      ],
      "artifactName": "CLASP.Bridge-${arch}.${ext}"
    },
    "win": {
      "target": ["nsis", "portable"],
      "artifactName": "CLASP.Bridge-Setup.${ext}"
    },
    "nsis": {
      "artifactName": "CLASP.Bridge-Setup.${ext}"
    },
    "portable": {
      "artifactName": "CLASP.Bridge-portable.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "artifactName": "CLASP.Bridge.${ext}"
    },
    "deb": {
      "artifactName": "clasp-bridge.${ext}"
    }
  },
  "author": {
    "name": "LumenCanvas",
    "email": "hello@lumencanvas.studio"
  },
  "license": "MIT"
}
