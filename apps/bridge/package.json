{
  "name": "clasp-bridge",
  "version": "0.2.2",
  "description": "CLASP Bridge - Universal Creative Protocol Bridge",
  "homepage": "https://clasp.to",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "prebuild": "node scripts/build-rust.js",
    "build": "vite build && electron-builder",
    "build:skip-rust": "vite build && electron-builder",
    "start": "electron .",
    "lint": "eslint src electron"
  },
  "dependencies": {
    "@clasp-to/core": "file:../../bindings/js/packages/clasp-core",
    "@msgpack/msgpack": "^3.1.3",
    "serialport": "^13.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.lumencanvas.clasp-bridge",
    "productName": "CLASP Bridge",
    "icon": "assets/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "afterSign": "scripts/notarize.js",
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "artifactName": "CLASP.Bridge-${arch}.${ext}",
      "extraResources": [
        {
          "from": "../../target/release/clasp-service",
          "to": "bin/clasp-service"
        },
        {
          "from": "../../target/release/clasp-router",
          "to": "bin/clasp-router"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "CLASP.Bridge-Setup.${ext}",
      "extraResources": [
        {
          "from": "../../target/release/clasp-service.exe",
          "to": "bin/clasp-service.exe"
        },
        {
          "from": "../../target/release/clasp-router.exe",
          "to": "bin/clasp-router.exe"
        }
      ]
    },
    "nsis": {
      "artifactName": "CLASP.Bridge-Setup.${ext}"
    },
    "portable": {
      "artifactName": "CLASP.Bridge-portable.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "CLASP.Bridge.${ext}",
      "extraResources": [
        {
          "from": "../../target/release/clasp-service",
          "to": "bin/clasp-service"
        },
        {
          "from": "../../target/release/clasp-router",
          "to": "bin/clasp-router"
        }
      ]
    },
    "deb": {
      "artifactName": "clasp-bridge.${ext}"
    }
  },
  "author": {
    "name": "LumenCanvas",
    "email": "hello@lumencanvas.studio"
  },
  "license": "MIT"
}
